// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum TimeOffType {
  VACATION
  SICK_LEAVE
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String   @unique
  password      String
  role          Role     @default(EMPLOYEE)
  createdAt     DateTime @default(now()) @map("createdAt")
  startDate     DateTime? @map("startDate") // Дата початку роботи для розрахунку вихідних
  vacationDays  Float    @default(0) @map("vacationDays") // Нараховані дні відпустки
  sickLeaveDays Float    @default(10) @map("sickLeaveDays") // Нараховані дні лікарняних (10 днів на рік)
  news          News[]
  timeOffRequests TimeOffRequest[]
  daysAccruals  DaysAccrual[]
  adminAccruals DaysAccrual[] @relation("AdminAccruals")

  @@map("users")
}

model News {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  content     String
  imageUrl    String?  @map("imageUrl")
  publishedAt DateTime @default(now()) @map("publishedAt")
  authorId    String   @map("authorId") @db.ObjectId
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@map("news")
}

model Holiday {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String
  date DateTime
  type String // "public_holiday" or "company_event"

  @@map("holidays")
}

model TimeOffRequest {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  type      TimeOffType
  startDate DateTime      @map("startDate")
  endDate   DateTime      @map("endDate")
  status    RequestStatus @default(PENDING)
  reason    String
  requesterId String      @map("requesterId") @db.ObjectId
  requester   User        @relation(fields: [requesterId], references: [id], onDelete: Cascade)
  createdAt DateTime      @default(now()) @map("createdAt")

  @@map("time_off_requests")
}

model DaysAccrual {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @map("userId") @db.ObjectId
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type          String   // "VACATION" or "SICK_LEAVE"
  days          Float
  reason        String?  // Причина нарахування (коментар адміна)
  adminId       String   @map("adminId") @db.ObjectId
  admin         User     @relation("AdminAccruals", fields: [adminId], references: [id])
  createdAt     DateTime @default(now()) @map("createdAt")

  @@map("days_accruals")
}

